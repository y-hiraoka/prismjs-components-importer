{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "./dist/esm",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
